.breadcrumb
  color: $colors.gray2
  display: none
  font-size: .75em

  @media (min-width: $breakpoints.tablet)
    display: block

  &__list
    align-items: center
    display: flex
    justify-content: flex-start
    list-style: none
    margin: 0

  &__separator
    margin: 0 .5ch

  &__link
    color: inherit
    text-decoration: none