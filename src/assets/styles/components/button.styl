button
  appearance: none
  background: none
  border: none
  cursor: pointer
  font: inherit

.button
  @extend h5
  appearance: none
  background: none
  color: inherit
  cursor: pointer
  display: inline-block
  font-size .75em
  height: auto
  line-height: $baseline
  margin: 0
  overflow: hidden
  padding: ($baseline / 2 / .75) ($baseline / .75)
  position: relative
  text-decoration: none
  width: auto
  white-space: nowrap

  &::after,
  &::before
    background: transparent
    border: solid $colors.red
    bottom: 0
    box-sizing: border-box
    content: ''
    display: block
    left: 0
    position: absolute

  &::after
    border-width: 0 2px 2px 0
    height: 0
    width: ($baseline * 3)

  &::before
    border-width: 2px 0 0 2px
    height: ($baseline * 1.5)
    width: 0

  &:hover
    &::before,
    &::after
      height: 100%
      width: 100%

  &::before,
  &:hover::after
    transition: height .25s .25s ease, width .25s 0s ease

  &::after
  &:hover::before
    transition: height .25s 0s ease, width .25s .25s ease

  &--white
    &::after,
    &::before
      border-color: $colors.white

  &[type="submit"]
    box-shadow: inset 0 0 0 2px $colors.white
    transition: background-color .5s 0s ease

    &::before,
    &::after
      border-color: $colors.red2

    &:hover
      background: $colors.red
      transition: background-color .5s .25s ease