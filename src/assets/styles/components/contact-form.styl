.contact-form
  align-items: center
  background: $colors.red2
  bottom: 0
  border-left: $baseline solid $colors.red
  color: $colors.white
  display: flex
  height: 100vh
  left: 0
  justify-content: center
  padding: ($baseline * 6) $baseline $baseline $baseline
  position: fixed
  width: 100vw
  z-index: -1

  @media (min-width: $breakpoints.tablet)
    padding: ($baseline * 2)

  @media (min-width: $breakpoints.desktop)
    padding: ($baseline * 3)

  &[aria-hidden="true"]
    display: none
    opacity: 0
    pointer-events: none

  &__title
    @extend h1
    max-width: 7em

  &__form
    max-width: 36em
    width: 100%

  label[for="contact-form-message"]
    .form__label
      @extend h1
      margin: 0
      text-transform: none

  .form__input
    line-height: ($baseline * 1.5)

    &[name="message"]
      border: 0
      font-size: 1.25em
      line-height: $baseline